@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>

@if (Request.IsAuthenticated)
{
    <p>Your cart is empty. Show me your money!</p>
    <br />
    @Html.ActionLink("Start shopping!", "Index", "AspNetProducts", new { area = "" }, new { @class = "btn btn-danger btn-lg" })
}
else
{
    Response.Redirect("~/Account/Login");
}

