@model BingCC.Models.AspNetOrders

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Order Details</h2>

<table class="table">
    <tr>
        <th>
            Product name
        </th>
        <th>
            Product price
        </th>
        <th></th>
    </tr>

    @foreach (var item in ViewBag.itemsInOrder)
    {
        <tr>
            <td>
                @item.ProductName
            </td>
            <td>
                ￥@item.ProductPrice
            </td>
        </tr>
    }
</table>

<div align="left">
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Order date
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OrderDate)
        </dd>

        <dt>
            Shipping charge
        </dt>

        <dd>
            ￥@Html.DisplayFor(model => model.OrderFreight)
        </dd>

        <dt>
            Total cost
        </dt>

        <dd>
            ￥@Html.DisplayFor(model => model.OrderTotalPrice)
        </dd>
    </dl>
</div>







