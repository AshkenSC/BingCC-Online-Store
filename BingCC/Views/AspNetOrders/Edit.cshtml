@model BingCC.Models.AspNetOrders

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";

    ViewBag.currentData = Model;
}

<h2>Your rate</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>How will you rate our service this time? (from 1 to 10)</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.OrderId)
    @Html.HiddenFor(model => model.OrderDate)
    @Html.HiddenFor(model => model.OrderFreight)
    @Html.HiddenFor(model => model.OrderTotalPrice)
    @Html.HiddenFor(model => model.UserId)
   

    <div class="form-group">
        @Html.LabelFor(model => model.OrderRate, htmlAttributes: new { @class = "control-label col-md-2" })  
        <div class="col-md-10">
            @Html.EditorFor(model => model.OrderRate, new { htmlAttributes = new { @class = "form-control", min = 0, max =  10 } })
            @Html.ValidationMessageFor(model => model.OrderRate, "", new { @class = "text-danger" })
        </div>
    </div>


